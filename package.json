{
  "name": "koa-helloworld",
  "version": "0.0.1",
  "description": "Demo of koa",
  "license": "MIT",
  "private": true,
  "keywords": [
    "koa",
    "koa2",
    "koa-boilerplate",
    "koa-helloworld",
    "boilerplate",
    "helloworld",
    "scaffold",
    "skeleton"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:jjangga0214/koa-helloworld.git"
  },
  "bugs": {
    "url": "https://gitlab.com/jjangga0214/node-boilerplate/issues"
  },
  "homepage": "https://gitlab.com/jjangga0214/koa-helloworld",
  "author": {
    "name": "Gil B. Chan",
    "email": "bnbcmindnpass@gmail.com",
    "url": "https://gitlab.com/jjangga0214"
  },
  "engines": {
    "node": ">=8",
    "yarn": ">=1"
  },
  "engineStrict": true,
  "scripts": {
    "postinstall": "link-module-alias",
    "lint": "yarn run lint:js && yarn run lint:md",
    "lint:js": "eslint --fix --ext js --ext md",
    "lint:js:all": "yarn run lint:js .",
    "lint:md": "markdownlint --ignore ./node_modules --ignore ./git",
    "lint:md:all": "yarn run lint:md .",
    "lint:ci": "yarn run lint:ci:js:all && yarn run lint:md:all",
    "lint:ci:js:all": "eslint . --ext js --ext md --format junit --output-file ./reports/eslint.xml",
    "test": "dotenv -- jest",
    "test:unit": "yarn run test test/unit",
    "test:integration": "yarn run test test/integration",
    "test:coverage": "yarn run test --coverage",
    "test:coverage:unit": "yarn run test:unit --coverage --coverageDirectory ./coverage-unit",
    "test:coverage:integration": "yarn run test:integration --coverage --coverageDirectory ./coverage-integration",
    "start": "dotenv -- nodemon index.js"
  },
  "_moduleAliases": {
    "~": ".",
    "#": "src"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "5.3.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.9.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": ">= 1",
    "jest": "^24.8.0",
    "link-module-alias": "^1.2.0",
    "lint-staged": ">=8",
    "markdownlint-cli": "^0.17.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn run lint:js",
      "git add"
    ],
    "*.md": [
      "yarn run lint:md",
      "git add"
    ]
  },
  "dependencies": {
    "dotenv-cli": "^2.0.1",
    "koa": "^2.7.0",
    "koa-body": "^4.1.0",
    "koa-helmet": "^4.2.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "maxHeaderWidth": 100,
      "maxLineWidth": 100,
      "defaultType": "",
      "defaultScope": "",
      "defaultSubject": "",
      "defaultBody": "",
      "defaultIssues": ""
    }
  }
}
